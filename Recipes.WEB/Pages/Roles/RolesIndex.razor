@page "/roles"

@inject IRepository repository
@inject NavigationManager navigationManager
@inject SweetAlertService swal

<h3>Roles</h3>

<div class="mb-3">
    <a class="btn btn-primary" href="/roles/create">Nuevo Rol</a>
</div>

<GenericList MyList="Roles">

    <Body>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Receta</th>
                    <th></th>

                </tr>
            </thead>
            <tbody>
                @foreach (var role in Roles!)
                {
                    <tr>
                        <td>
                            @role.Name
                        </td>
                        <td>
                            <a href="/roles/edit/@role.Id" class="btn btn-warning">Editar</a>
                            <button class="btn btn-danger" @onclick=@(() => Delete(role))>Borrar</button>

                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </Body>

</GenericList>

@code {
    public List<Role>? Roles { get; set; }

    protected async override Task OnInitializedAsync()
    {
        await Load();
    }

    private async Task Load()
    {
        var responseHppt = await repository.Get<List<Role>>("api/roles");
        Roles = responseHppt.Response!;
    }

    private async Task Delete(Role role)
    {
        var result = await swal.FireAsync(new SweetAlertOptions
            {
                Title = "Confirmación",
                Text = "¿Esta seguro que quieres borrar el registro?",
                Icon = SweetAlertIcon.Question,
                ShowCancelButton = true
            });

        var confirm = string.IsNullOrEmpty(result.Value);

        if (confirm)
        {
            return;
        }

        var responseHTTP = await repository.Delete($"api/roles/{role.Id}");

        if (responseHTTP.Error)
        {
            if (responseHTTP.HttpResponseMessage.StatusCode == System.Net.HttpStatusCode.NotFound)
            {
                navigationManager.NavigateTo("/");
            }
            else
            {
                var mensajeError = await responseHTTP.GetErrorMessageAsync();
                await swal.FireAsync("Error", mensajeError, SweetAlertIcon.Error);
            }
        }
        else
        {
            await Load();
        }
    }

}